#include<stdio.h>
int main()
{
    int a,b,t1,t2,sum,f,n;
    t1=0;
    t2=100001;
    scanf("%d",&n);
    if(n>1)
    {
        for(f=0; f<n; f++)
        {
            scanf("%d%d",&a,&b);
            if(a<b)
            {
                if(b>t1)
                    t1=b;
            }
            if(a>b)
            {
                if(b<t2)
                    t2=b;
                if(a>t1)
                    t1=a;
            }}

            if(t2==100001)
                t2=0;else t2=t1-t2;
            sum=t1-1+t2;
            printf("%d",sum);
        }
        else if(n==1)
        {
            scanf("%d%d",&a,&b);
            if(a<b)
            printf("%d",b-1);
            if(a>b)
                printf("%d",2*a-b-1);
        }
        return 0;
    }
#include<stdio.h>
int main()
{
    int a,b,t1,t2,sum,f,n;
    t1=0;
    t2=100001;
    scanf("%d",&n);
    if(n>1)
    {
        for(f=0; f<n; f++)
        {
            scanf("%d%d",&a,&b);
            if(a<b)
            {
                if(b>t1)
                    t1=b;
            }
            if(a>b)
            {
                if(b<t2)
                    t2=b;
                if(a>t1)
                    t1=a;
            }}
            if(t2=100001)
                t2=0;
            sum=2*t1-1-t2;
            printf("%d",sum);
        }
        else if(n==1)
        {
            scanf("%d%d",&a,&b);
            if(a<b)
            printf("%d",b-1);
            if(a>b)
                printf("%d",2*a-b-1);
        }
        return 0;
    }

